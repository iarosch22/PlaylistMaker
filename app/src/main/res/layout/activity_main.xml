<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_blue"
    android:orientation="vertical"
    android:paddingTop="@dimen/top_padding"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingRight="@dimen/medium_padding"
    android:paddingBottom="@dimen/large_padding" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/inner_heading_padding"
        android:layout_marginBottom="@dimen/large_margin"
        android:textSize="@dimen/primary_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_weight="3"
            android:backgroundTint="@color/white"
            android:text="@string/app_search"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_text_size"
            app:cornerRadius="@dimen/btn_radius"
            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <Button
            android:id="@+id/btn_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/medium_margin"
            android:layout_weight="3"
            android:backgroundTint="@color/white"
            android:text="@string/app_library"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_text_size"
            app:cornerRadius="@dimen/btn_radius"
            app:icon="@drawable/ic_library"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:backgroundTint="@color/white"
            android:text="@string/app_settings"
            android:textAllCaps="false"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/primary_text_size"
            app:cornerRadius="@dimen/btn_radius"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconTint="@color/yp_black"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

</LinearLayout>