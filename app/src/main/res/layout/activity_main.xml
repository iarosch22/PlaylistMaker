<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_28"
    style="@style/LayoutPadding" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:paddingTop="10dp"
        android:paddingBottom="@dimen/padding_12"
        android:layout_marginBottom="@dimen/margin_24"
        style="@style/HeadingTextStyles"
        android:textColor="?attr/colorOnPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_weight="3"
            android:text="@string/app_search"
            app:icon="@drawable/ic_search"
            style="@style/MainButtonStyles" />

        <Button
            android:id="@+id/btn_library"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_16"
            android:layout_weight="3"
            android:text="@string/app_library"
            app:icon="@drawable/ic_library"
            style="@style/MainButtonStyles" />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/app_settings"
            app:icon="@drawable/ic_settings"
            style="@style/MainButtonStyles" />

    </LinearLayout>

</LinearLayout>