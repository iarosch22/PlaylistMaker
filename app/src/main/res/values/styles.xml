<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyles" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
    </style>

    <style name="PlaceholderButtonStyles" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_placeholder_btn</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/placeholder_btn_radius</item>
    </style>

    <style name="HeadingTextStyles">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="RegularTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TrackDescriptionTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColor">@color/yp_icon</item>
    </style>
    <style name="EditTextStyles">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">30</item>
        <item name="android:textColorHint">@color/yp_hint</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    <style name="MediumTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="LayoutPadding">
        <item name="android:paddingTop">@dimen/padding_4</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
    </style>
    <style name="SearchLayoutPadding">
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
    </style>
    <style name="PlaceholderLayoutPadding">
        <item name="android:paddingStart">@dimen/padding_24</item>
        <item name="android:paddingEnd">@dimen/padding_24</item>
    </style>

    <style name="ThemeSwitcherStyle">
        <item name="thumbTint">@color/yp_switcher_thumb</item>
        <item name="trackTint">@color/yp_switcher_track</item>
    </style>

</resources>