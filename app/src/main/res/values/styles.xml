<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyles" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
    </style>
    <style name="HeadingTextStyles">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="RegularTextStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="LayoutPadding">
        <item name="android:paddingTop">@dimen/padding_4</item>
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <item name="android:paddingRight">@dimen/padding_16</item>
        <item name="android:paddingBottom">@dimen/padding_28</item>
    </style>
    <style name="EditTextStyles">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">50</item>
        <item name="android:textColorHint">@color/yp_hint</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>