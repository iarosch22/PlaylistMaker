<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_blue</item>
        <item name="colorPrimaryVariant">@color/yp_black</item>
        <item name="colorOnPrimary">@color/yp_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yp_white</item>
        <item name="colorSecondaryVariant">@color/yp_white</item>
        <item name="colorOnSecondary">@color/yp_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAlertDialogStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/yp_white</item> <!-- фон -->
        <item name="colorOnSurface">@color/yp_black</item> <!-- цвет текста -->
        <item name="android:textColorSecondary">@color/yp_blue</item>
        <item name="android:background">@color/yp_white</item>

        <item name="buttonBarPositiveButtonStyle">@style/MyDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyDialogButton</item>
    </style>

    <style name="MyDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yp_blue</item> <!-- Цвет текста кнопки -->
    </style>

</resources>